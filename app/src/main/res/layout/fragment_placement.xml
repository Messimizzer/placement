<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">


    <Button
        android:id="@+id/addstud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="234dp"
        android:layout_marginBottom="60dp"
        android:text="Add Students" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="531dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/graduation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="214dp"
        android:ems="10"
        android:hint="Graduation Marks"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pgraduation"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="419dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="135dp"
        android:ems="10"
        android:hint="Post Graduation Marks"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/marks10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="373dp"
        android:ems="10"
        android:hint="10th Marks"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/rollno"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="453dp"
        android:ems="10"
        android:hint="Roll No."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="72dp"
        android:text="Placement"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/marks12"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="297dp"
        android:ems="10"
        android:hint="12th Marks"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/viewstud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="624dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="59dp"
        android:text="View Students" />
</RelativeLayout>